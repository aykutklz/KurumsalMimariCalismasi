@using System.Threading.Tasks
@using NorthwindMvc.WebUI.Models
@model NorthwindMvc.WebUI.Models.ProductAddViewModel
@{
    ViewBag.Title = "title";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h2>Add a product</h2>
<form asp-controller="Admin" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="@Model.Product.ProductName"></label>
        <input asp-for="@Model.Product.ProductName" class="form-control" placeholder="Product Name"/>
        <span asp-validation-for="@Model.Product.ProductName"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Product.CategoryId"></label>
        <select asp-for="@Model.Product.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))"></select>
        <span asp-validation-for="@Model.Product.CategoryId"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Product.UnitPrice"></label>
        <input asp-for="@Model.Product.UnitPrice" class="form-control" placeholder="Product Unit Price"/>
        <span asp-validation-for="@Model.Product.UnitPrice"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Product.UnitsInStock"></label>
        <input asp-for="@Model.Product.UnitsInStock" class="form-control" placeholder="Product Units In Stock"/>
        <span asp-validation-for="@Model.Product.UnitsInStock"></span>
    </div>
    <input type="submit" value="Add" class="btn btn-xs btn-success" />
</form>
